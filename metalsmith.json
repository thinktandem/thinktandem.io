{
  "plugins": {
    "metalsmith-collections": {
      "articles": {
        "sortBy": "date",
        "reverse": true,
        "pattern": "content/articles/*.md"
      },
      "caseStudies": {
        "sortBy": "date",
        "reverse": true,
        "pattern": "content/case-studies/*.md"
      },
      "careers": {
        "sortBy": "weight",
        "pattern": "content/careers/*.md"
      },
      "lastestArticles": {
        "sortBy": "date",
        "limit": 3,
        "reverse": true,
        "pattern": "content/articles/*.md"
      },
      "recentWork": {
        "sortBy": "date",
        "limit": 4,
        "reverse": true,
        "pattern": "content/case-studies/*.md"
      },
      "featuredArticles": {
        "sortBy": "date",
        "limit": 2,
        "reverse": true,
        "pattern": "content/articles/*.md"
      },
      "services": {
        "sortBy": "weight",
        "pattern": "content/services/*.md"
      },
      "staff": {
        "sortBy": "weight",
        "pattern": "content/staff/*.md"
      }
    },
    "metalsmith-metadata-convention": {},
    "metalsmith-move-up": {
      "pattern": "content/**/*"
    },
    "metalsmith-env": {
      "variables": {
        "basePath": "/"
      }
    },
    "metalsmith-markdown": {
      "langPrefix": "language-"
    },
    "metalsmith-prism": true,
    "metalsmith-include": {},
    "metalsmith-permalinks": {
      "pattern": ":url",
      "relative": false,
      "linksets": [
        {
          "match": {"collection": "articles"},
          "pattern": "blog/:date/:title"
        },
        {
          "match": {"collection": "caseStudies"},
          "pattern": "work/:slug"
        },
        {
          "match": {"collection": "services"},
          "pattern": "services/:slug"
        }
      ]
    },
    "metalsmith-pagination": {
      "collections.articles": {
        "perPage": 3,
        "layout": "pages/blog.html",
        "first": "blog/index.html",
        "path": "blog/:num/index.html",
        "pageMetadata": {
          "title": "Blog"
        }
      }
    },
    "metalsmith-tags": [
      {
        "handle": "tags",
        "metadataKey": "tags",
        "path": "blog/:tag/index.html",
        "pathPage": "blog/:tag/:num/index.html",
        "perPage": 3,
        "layout": "pages/tags.html",
        "sortBy": "date",
        "reverse": true
      },
      {
        "handle": "industries",
        "metadataKey": "industries",
        "path": "work/industry/:tag/index.html",
        "pathPage": "work/industry/:tag/:num/index.html",
        "layout": "pages/industries.html",
        "sortBy": "date",
        "reverse": true,
        "skipMetadata": true
      },
      {
        "handle": "tech",
        "metadataKey": "tech",
        "path": "work/technology/:tag/index.html",
        "pathPage": "work/technology/:tag/:num/index.html",
        "layout": "pages/tech.html",
        "sortBy": "date",
        "reverse": true
      },
      {
        "handle": "services",
        "metadataKey": "services",
        "path": "work/service/:tag/index.html",
        "pathPage": "work/service/:tag/:num/index.html",
        "layout": "pages/service.html",
        "sortBy": "date",
        "reverse": true
      }
    ],
    "metalsmith-jsonld": {
      "defaults": [
        {
          "@context": "http://schema.org",
          "@type": "WebSite",
          "name": "Tandem",
          "alternateName": "The site for Tandem, a software strategy firm.",
          "url": "https://www.thinktandem.io"
        },
        {
          "@context": "http://schema.org",
          "@type": "Organization",
          "url": "https://www.thinktandem.io",
          "logo": {
            "@type": "ImageObject",
            "url": "https://www.thinktandem.io/images/logo-json.png",
            "width": 213,
            "height": 60
          },
          "sameAs": [
            "https://www.linkedin.com/company/12898991/",
            "https://twitter.com/thinktandem"
          ]
        }
      ],
      "collections": {
        "articles": [
          {
            "@context": "http://schema.org",
            "@type": "BlogPosting",
            "headline": "title",
            "alternativeHeadline": "teaser",
            "mainEntityOfPage": "true",
            "image": "mainImage",
            "keywords": "tags",
            "publisher": {
              "@context": "http://schema.org",
              "@type": "Organization",
              "name": "Kalabox Inc. DBA Tandem",
              "url": "https://www.thinktandem.io",
              "logo": {
                "@type": "ImageObject",
                "url": "https://www.thinktandem.io/images/logo-json.png",
                "width": 213,
                "height": 60
              },
              "sameAs": [
                "https://www.linkedin.com/company/12898991/",
                "https://twitter.com/thinktandem"
              ]
            },
            "datePublished": "date",
            "dateCreated": "date",
            "dateModified": "date",
            "description": "teaser",
            "author": {
              "@type": "Person",
              "name": "author"
            }
          }
        ]
      }
    },
    "metalsmith-seo-checker": {
      "trailingSlash": true,
      "canonicalBase": "http://www.thinktandem.io",
      "lengths": {
        "title": 60,
        "description": 160
      },
      "seo": {
        "title": true,
        "description": "Tandem uses open-source tools like Drupal, Laravel, and Docker to transform your complex workflows and technical debt into elegant web applications.",
        "robots": "index, follow"
      },
      "ogp": {
        "defaultType": "website",
        "defaultImage": "thinktandem.io/images/favicon.png",
        "ignoreMissingImage": false
      }
    },
    "metalsmith-sitemap": {
      "hostname": "http://www.thinktandem.io",
      "omitIndex": true
    },
    "metalsmith-robots": {
      "useragent": "googlebot",
      "disallow": ["404.html", "contact-thanks.html"],
      "sitemap": "http://www.thinktandem.io/sitemap.xml"
    },
    "metalsmith-swig-helpers": {
      "filters": {
        "xorcrypt": "xor-crypt"
      }
    },
    "metalsmith-in-place": {
      "engine": "swig",
      "partials": "templates/components"
    },
    "metalsmith-layouts": {
      "engine": "swig",
      "directory": "templates"
    },
    "metalsmith-assets": {
      "source": "./assets",
      "dest": "."
    },
    "metalsmith-sass": {
      "outputStyle": "nested",
      "sourceComments": false,
      "sourceMap": true,
      "includePaths": [
        "assets/public",
        "assets/public/bootstrap-sass-twbs/assets/stylesheets",
        "assets/public/devicons/css/",
        "assets/public/fontawesome/scss/",
        "templates/components/**/*"
      ]
    },
    "metalsmith-concat": {
      "files": [
        "fonts/fonts.css",
        "public/devicon/devicon.min.css",
        "styles/main.css"
      ],
      "output": "styles/final.css"
    }
  }
}
